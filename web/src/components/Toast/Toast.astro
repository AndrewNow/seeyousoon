---
const { data } = Astro.props;

import Desktop from "./Desktop.astro";
import Mobile from "./Mobile.astro";
---

<div class="toastWrapper">
  <Desktop data={data} />
  <Mobile data={data} />
</div>

<style lang="scss">
  .toastWrapper {
    z-index: 15;
    position: fixed;
    bottom: 1rem;
    right: 2vw;
  }
</style>

