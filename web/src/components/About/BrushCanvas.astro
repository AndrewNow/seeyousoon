---
import Image from 'astro/components/Image.astro';
import trash from '../../assets/trash.png'
import pencil from '../../assets/pencil.png'
import doodleStar from '../../assets/doodle-star.png'
---
<div class="content" id="sidebar">
  <div class="flex content__bottom">
    <button class="button-clear" id="button_clear">
      <Image src={trash} alt="" width="25" height="31" quality={100}/>
      <p>Clear</p>
    </button>
  </div>
</div>
<div class="canvas-container" id="canvas_container">
  <canvas class="lazy-canvas" id="canvas_interface"></canvas>
  <canvas class="lazy-canvas" id="canvas_drawing"></canvas>
  <canvas class="lazy-canvas" id="canvas_temp"></canvas>
  <!-- <canvas class="lazy-canvas" id="canvas_grid"></canvas> -->
  <div class="drawing-cursor" id="canvas_cursor">
    <Image src={pencil} alt="" width="50" height="60" quality={100}/> <h5 id="canvas_cursor_text">Draw your own star!</h5>
  </div>

  <Image src={doodleStar} alt="" width="609" height="530" quality={40} class="bg-star"/>
</div>

<style is:global>
  .bg-star {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    aspect-ratio: 610/530;
    width: 60%;
    height: auto;
  }
  .drawing-cursor {
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
    pointer-events: none;
    display: flex;
    align-items: flex-start;
    flex-direction: row;
    color: var(--beige-300);
    h5 {
      margin-left: .75rem;
      transform: translateY(-10px);
      font-family:"Bradford-Light-Italic";
    }
  }
  .button-clear {
    margin-top: 2rem;
    margin-left: 2rem;
    display: flex;
    background: none;
    color: var(--beige-300);
    border: none;
    cursor: pointer;
    transition: .35 all ease;
    
    p {
      opacity: 0;
      transition: .3s all ease;
      transform: translateY(10px);
      margin-left: .75rem;
      font-family: "Denim-regular";
    }
  }
  
  .button-clear:hover {
    transition: .35 all ease;
    
    p {
      opacity: 1;
      transform: translateY(0px);
    }
  }
  #mobileConsole {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 150px;
    background: rgba(255, 255, 255, 0.8);
    overflow: auto;
    z-index: 9999;
    font-family: monospace;
    font-size: 12px;
    padding: 10px;
    border-top: 1px solid #ccc;
    color: black;
  }

  #sidebar {
    position: absolute;
    z-index: 20;
  }
  #canvas_interface {
  z-index: 15;
  cursor: none;
  }
  #canvas_grid {
    z-index: 14;
  }
  #canvas_temp {
    z-index: 12;
  }
  #canvas_drawing {
    z-index: 10;
  }

  #canvas_container {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
  }
  #slider_lazy, #slider_brush {
    width: 100px;
  }

  .lazy-canvas {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
  }
  .lazy-canvas {
  touch-action: none;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

</style>

<script>
  import Scene from "./classes/Scene";

  const scene = new Scene({
    canvasContainer: "canvas_container",
    sidebar: "sidebar",
    canvas: {
      interface: "canvas_interface",
      drawing: "canvas_drawing",
      temp: "canvas_temp",
    },
    cursor: "canvas_cursor",
    cursorText: "canvas_cursor_text",
    button: {
      clear: "button_clear",
    },
  });
  scene.init();
  
</script>
