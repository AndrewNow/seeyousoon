---
import footer from "../assets/footer/footer.png";
import Image from "astro/components/Image.astro";
---

<footer class="wrapper">
  <div class="video">
    <div class="video-text">
      <h2 class="sys-text">see you soon!</h2>
      <div class="socials">
        <h3>Instagram <a class="socials-link">@seeyousoon.to</a></h3>
        <h3>Email <a class="socials-link">info@seeyousoon.to</a></h3>
      </div>
    </div>
    <Image src={footer} alt="video" class="video-media" />
  </div>
  <div class="credits">
    <div>
      <small class="location-flex">
      <span class="current-location"> Currently in:</span>Toronto</small>
    </div>
    <div>
      <small>Â©{new Date().getFullYear()} seeyousoon</small>
    </div>
    <div>
      <small> Website by Sling</small>
    </div>
  </div>
</footer>

<style lang="scss">
  @keyframes bounce {
    0%,
    100% {
      // transform: translateY(4px);
      opacity: 0;
      // animation-timing-function: cubic-bezier(0.68, -0.55, 0.27, 1.55);
    }
    50% {
      // transform: translateY(-2px);
      opacity: 1;
      // animation-timing-function: cubic-bezier(0.32, 0.43, 0.58, 1);
    }
  }

  .wrapper {
    width: 98%;
    margin: 0 auto;
    margin-top: 5rem;
  }
  .video {
    background: var(--grey-100);
    border-radius: 8px;
    width: 100%;
    height: 55vh;
    position: relative;
    overflow: hidden;
    display: grid;
    place-items: center;
    object-fit: cover;

    .video-media {
      width: 100%;
      object-fit: cover;
      filter: brightness(0.7);
    }

    .video-text {
      width: 90%;
      margin: 0 auto;
      position: absolute;
      z-index: 10;
      top: 55%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: flex;
      justify-content: space-between;
    }
  }

  .sys-text {
    color: var(--beige-100);
    font-family: "Bradford-Light-Italic";
    letter-spacing: -.4rem;
    line-height: unset;
    font-size: 160px;
    transform: rotate(-4.5deg) translateY(-30px);
  }
  .socials {
    color: var(--beige-100);
    

    .socials-link:before {
      content: "";
      display: block;
      background: var(--beige-100);
      height: 1px;
      width: 32px;
      margin: 0 1rem;
    }

    h3 {
      font-family: "Bradford-Light";
      display: flex;
      align-items: center;
      justify-content: center;
      a {
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: "Bradford-Light-Italic";
      }
    }
  }

  .credits {
    width: 95%;
    margin: 1rem auto;
    display: flex;
    justify-content: space-between;
    font-family: "Denim-Regular";

    small {
      font-size: 14px;
      color: var(--grey-300);
    }
    .location-flex {
      display: flex;
    }
    .current-location {
      color: var(--brown-300);
      display: flex;
      align-content: flex-end;
      margin-right: 0.25rem;
    }
    .current-location:before {
      content: "";
      margin-right: 0.5rem;
      width: 7px;
      height: 7px;
      background: #708db5;
      transform: translateY(5px);
      display: block;
      border-radius: 10px;
      animation: bounce 1.6s infinite;
    }
  }
</style>
